<section id="todos">
    <header>
      <h2>Editing '<%= @list[:name] %>'</h2>
      <ul>
        <li>
          <form action="/lists/<%= params[:number] %>/destroy" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
        </li>
      </ul>
    </header>
</section>

<form action="/lists/<%= params[:number] %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Edit the name of your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= params[:number] %>">Cancel</a>
  </fieldset>
</form>
