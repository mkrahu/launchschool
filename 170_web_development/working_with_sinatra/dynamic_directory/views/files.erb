<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %> </title>
  </head>
  <body>
    <ul>
      <% @files.each do |file| %>
        <li><a href="<%= file %>"><%= file %></a></li>
      <% end %>
    </ul>

    <% if params['sort'] %>
      <a href='/'>Sort ascending</a>
    <% else %>
      <a href='/?sort=desc'>Sort descending</a>
    <% end %>
  </body>
</html>
