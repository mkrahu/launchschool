<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @title %></title>
  </head>
  <body>
    <h1>List of files</h1>
    <ul>
      <% @files.each do |file| %>
        <li><a href="../<%= file %>"><%= file %></a></li>
      <% end %>
    </ul>
    <% if params[:sort] == 'desc' %>
      <a href='/'>Sort Ascending</a>
    <% else %>
      <a href='/?sort=desc'>Sort Descending</a>
    <% end %>
  </body>
</html>
